<%- include ('../../partials/header.ejs') %>
    <body>
        <%- include ('../../partials/navbar.ejs') %>
        <div class="container">
            <hr>
            <div class="card">
                <div class="card-header">
                    <h2>Categorias</h2>
                    <hr>
                    <a class="btn" style="background-color: #46483d; color: white;" href="/admin/categories/new">Criar nova categoria</a>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead> <!--Cabeçalho da  tabela-->
                            <tr> <!--Linha da tabela-->
                                <th>ID</th> <!--Coluna da tabela-->
                                <th>Título</th>
                                <th>Slug</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categories.forEach(category => { %>
                                <tr>
                                    <th> <%= category.id %> </th>
                                    <th> <%= category.title %> </th>
                                    <th> <%= category.slug %> </th>
                                    <th>
                                        <a href="/admin/categories/selectcategory/<%= category.id %>"> <button class="btn btn-warning">Editar</button> </a>
                                        
                                        <form action="/categories/delete" method="POST" style="display: inline;" onsubmit="confirmDelete(event, this)">
                                            <input type="hidden" name="id" value=" <%= category.id %> ">
                                            <button class="btn btn-danger">Excluir</button>
                                        </form>
                                        
                                    </th>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
            
        </div>
    </body>
<%- include ('../../partials/footer.ejs') %>
<script>
    function confirmDelete(event, form){
        event.preventDefault();
        var decision = confirm("Deseja Deletar essa categoria?")
        if(decision){
            form.submit()
        }
    }
</script> 